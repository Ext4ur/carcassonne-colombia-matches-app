{
  "name": "carcassonne-tournament-manager",
  "version": "1.0.0",
  "description": "Aplicación de gestión de torneos presenciales de Carcassonne Colombia",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently -k \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "sleep 3 && electron . --enable-logging",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps",
    "rebuild-sqlite": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "carcassonne",
    "tournament",
    "manager"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.10.7",
    "better-sqlite3": "^12.4.6",
    "chart.js": "^4.4.1",
    "csv-writer": "^1.6.0",
    "drizzle-kit": "^0.20.6",
    "drizzle-orm": "^0.29.1",
    "exceljs": "^4.4.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "zustand": "^4.4.7"
  }
}
